{
  "name": "@aligent/ts-code-standards",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./tsconfigs-base": "./tsconfigs/base.json",
    "./tsconfigs-react": "./tsconfigs/react.json",
